<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>NordPOSMobiServlet</display-name>

    <!-- STRIPES LOCALIZATION PARAMETERS -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>StripesResources</param-value>
    </context-param>


    <context-param>
        <param-name>machine.printer</param-name>
        <param-value>plaintext:file,/home/user/print.text,unix</param-value>
        <!--
        <param-value>epson:file,/home/user/print.bin</param-value>
        <param-value>epson:serial,/dev/tty0,115200,8,1,none</param-value>
        <param-value>epson:file,/dev/usb/lp0</param-value>
        -->
    </context-param>
<!--
    <context-param>
        <param-name>machine.display</param-name>
        <param-value>epson:file,/home/user/display.bin</param-value>
        <param-value>epson:file,/dev/ttyUSB0</param-value>
    </context-param>
-->

    <filter>
        <filter-name>StripesFilter</filter-name>
        <filter-class>net.sourceforge.stripes.controller.StripesFilter</filter-class>

        <!-- STRIPES ACTIONS -->
        <init-param>
            <param-name>ActionResolver.Packages</param-name>
            <param-value>mobi.nordpos.device</param-value>
        </init-param>

        <!-- STRIPES LOCALES -->
        <init-param>
            <param-name>LocalePicker.Locales</param-name>
            <param-value>ru_RU:UTF-8,en_US:UTF-8</param-value>
        </init-param>
    </filter>

    <!-- FILTER MAPPINGS -->
    <filter-mapping>
        <filter-name>StripesFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter-mapping>
        <filter-name>StripesFilter</filter-name>
        <servlet-name>StripesDispatcher</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!-- SERVLETS -->
    <servlet>
        <servlet-name>StripesDispatcher</servlet-name>
        <servlet-class>net.sourceforge.stripes.controller.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- SERVLETS MAPPINGS -->
    <servlet-mapping>
        <servlet-name>StripesDispatcher</servlet-name>
        <url-pattern>/dispatcher</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StripesDispatcher</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StripesDispatcher</servlet-name>
        <url-pattern>/action/*</url-pattern>
    </servlet-mapping>

    <!-- WELCOME FILES -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
